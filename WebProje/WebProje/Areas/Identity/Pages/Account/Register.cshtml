@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V4</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Login_v4/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/font-awesome.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/fonts/iconic/css/material-design-iconic-font.min.css">

    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_v4/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_v4/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="height: 100%; font-family: Poppins-Regular, sans-serif; background: url('https://wallpaperaccess.com/full/109332.jpg')repeat 0px 0px; background-attachment: fixed; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover;">

    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <span class="login100-form-title p-b-49">
                    @localizer["Register"]
                </span>
                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["User Name"]
                    </span>
                    <input asp-for="Input.UserName" class="input100" type="text" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["Name"]
                    </span>
                    <input asp-for="Input.Name" class="input100" type="text" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>

                </div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["Surname"]
                    </span>
                    <input asp-for="Input.Surname" class="input100" type="text" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>

                </div>
                @*data-symbol="&#x2709" mail*@
                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["Email"]
                    </span>
                    <input asp-for="Input.Email" class="input100" type="text" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <span class="focus-input100" data-symbol="&#x2709" ;"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["Password"]
                    </span>
                    <input asp-for="Input.Password" class="input100" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-23" data-validate="">
                    <span class="label-input100">
                        @localizer["Confirm Password"]
                    </span>
                    <input asp-for="Input.ConfirmPassword" class="input100" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="wrap-input100 validate-input m-b-23" data-validate="">
                        <span class="label-input100">
                            @localizer["Birthday"]
                        </span>
                        <div class='input-group date' id='datepicker'>
                            <input asp-for="Input.USER_BIRTHDAY" type="text" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="Input.USER_BIRTHDAY" class="text-danger"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                @localizer["Register"]
                            </button>
                        </div>
                    </div>

                    <div class="txt1 text-center p-t-54 p-b-20">
                        <span>
                            <p>
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">@localizer["Are you have a account?Log in"]</a>
                            </p>
                        </span>
                    </div>
                </div>

            </form>
        </div>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
<script>
    $(function () {
        $('#datepicker').datetimepicker();
    });
</script>
