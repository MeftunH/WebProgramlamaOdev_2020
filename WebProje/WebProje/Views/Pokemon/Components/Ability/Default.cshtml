@model List<WebProje.Models.Abilities>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@if (Model.Count != 0)
{
    <div class="d-flex flex-row justify-content-between align-items-center">
        @foreach (var ability in Model)
        {
            <button class="btn btn-warning ability-button" data-abilityname="@ability.ABILITY_NAME" data-abilitydesc="@ability.ABILITY_DESC">@ability.ABILITY_NAME</button>
        }
    </div>
}
else
{
    <div>@localizer["Pokemon Yeteneği Bulunamadı"] !</div>
}
