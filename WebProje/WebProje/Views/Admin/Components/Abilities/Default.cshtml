@model List<WebProje.Models.Abilities>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;
<div>
    @foreach (var ability in Model)
    {
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-row justify-content-start">
                    <div class="d-flex flex-row justify-content-between">
                        <div>ID:</div>
                        <div>@ability.ABILITY_ID</div>
                    </div>
                    <div class="d-flex flex-row justify-content-between ml-2">
                        <div>@localizer["Yetenek Adı"]:</div>
                        <div>@ability.ABILITY_NAME</div>
                    </div>
                    <div class="d-flex flex-row justify-content-between ml-2">
                        <div>@localizer["Açıklama"]:</div>
                        <div>@ability.ABILITY_DESC</div>
                    </div>
                </div>

            </div>
            <div class="card-footer d-flex flex-row justify-content-between">
                <button class="btn btn-lg btn-danger ability-delete-button" data-abilityid="@ability.ABILITY_ID">@localizer["Sil"]</button>
                <button type="button" class="btn btn-lg btn-warning" data-toggle="modal" data-target="#editModal-@ability.ABILITY_ID">
                    @localizer["Düzenle"]
                </button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="editModal-@ability.ABILITY_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@localizer["Pokemon Yeteneğini Düzenle"]</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" class="form-control ability-name-input" value="@ability.ABILITY_NAME" required />
                            <input type="text" class="form-control mt-2 ability-desc-input" value="@ability.ABILITY_DESC" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@localizer["Kapat"]</button>
                        <button type="button" class="btn btn-primary ability-edit-submit" data-abilityid="@ability.ABILITY_ID">@localizer["Kaydet"]</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


